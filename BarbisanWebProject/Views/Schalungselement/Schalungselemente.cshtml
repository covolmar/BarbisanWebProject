@model List<BarbisanWebProject.Models.Schalungselement>
@{
	ViewBag.Title = "Schalungselemente";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Schalungselemente</h3>
<div class="schalungselement-boxed">
	<div class="container">
		<div class="row elemente">
			@foreach( var schalungsElement in Model )
			{
				using( Html.BeginForm( "AddItem", controllerName: "Schalungselement" ) )
				{
					<div class="col-md-6 col-lg-4 item">
						<div class="box mx-auto" id="box_@schalungsElement.Id">
							<div class="d-flex justify-content-center">
								<img class="mr-3 img-thumbnail img-fluid" src="~/Pics/TrioPic270x240.JPG" />
								<div>
									<h3 class="name">@schalungsElement.Name</h3>
									<p class="articleNumber">Nr. @schalungsElement.Artikelnummer</p>
									<p class="description">@schalungsElement.Bezeichnung<br></p>
								</div>
							</div>
							<h5 class="name">Miete pro Monat</h5>
							<p class="price" data-price="@schalungsElement.Preis">Fr. @schalungsElement.Preis</p>
							<div class="minusPlus">
								<div class="input-group">
									<span class="input-group-btn">
										<button class="btn btn-default btn-number" disabled="disabled" data-type="minus" data-field="@schalungsElement.Id">
											<span class="fa fa-minus"></span>
										</button>
									</span>
									<input type="text" name="@schalungsElement.Id" class="form-control input-number" value="1" min="1" max="10">
									<span class="input-group-btn">
										<button class="btn btn-default btn-number" data-type="plus" data-field="@schalungsElement.Id">
											<span class="fa fa-plus"></span>
										</button>
									</span>
								</div>
							</div>
							<button class="btn btn-outline-primary btn-block">Hinzufügen</button>
						</div>
					</div>
				}
			}
		</div>
	</div>
</div>

@section Scripts {
	@Scripts.Render( "~/bundles/minusPlus" )
}



